@model IEnumerable<Inmobiliaria.Models.Devolucion>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create" class="btn botonc">Crear Nuevo</a>
</p>
<table class="table fondotabla">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DevolucionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCasa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Casa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DevolucionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.ClienteID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCasa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Casa.CasaID)
            </td>
            <td>
                @* <a asp-action="Edit" asp-route-id="@item.DevolucionId">Edit</a> | *@
                <a asp-action="Details" asp-route-id="@item.DevolucionId" class="btn botond">Details</a> 
                @* <a asp-action="Delete" asp-route-id="@item.DevolucionId">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
